# only care about 'eth0' intf
[ "$IFACE" != "eth0" ] && exit 0

. /usr/local/bin/openbmc-utils.sh

vlan=4088
intf="${IFACE}.${vlan}"
slot=1

vconfig add $IFACE $vlan
ifconfig $intf "fe80::${slot}:1/64"
ip addr add 240.1.1.1/30 dev $intf
ifconfig $intf up

exit 0
