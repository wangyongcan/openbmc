TARGET   = syseeprom
OBJECTS += sys_eeprom.o onie_tlvinfo.o sys_eeprom_sysfs_file.o crc32.o

.c.o:
	$(CC) -c $(CFLAGS) $(INCPATH) -o $@ $<
$(TARGET):$(OBJECTS)
	$(CC) $(LDFLAGS) -o $(TARGET) $(OBJECTS)

.PHONY: clean

clean:
	rm -rf *.o $(TARGET)
